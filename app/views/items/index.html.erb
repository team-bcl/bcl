<div class="container item-index">
<h1 class="item_title">商品一覧</h1>
	<div class="row">
		<div class="col-md-2">
			<div>
				<h2>CATEGORY</h2>
					<ul>
						<%= form_with url: items_path, method: :get, local: true do |f| %>
							<% @items.genres.keys.zip(@items.genres.values).each do |genre, value| %>
							<li class="genre-checkbox">
								<%= f.check_box :genre, {multiple: true}, value, nil %>
								<%= f.label genre %>
							</li>
							<% end %>
							<%= f.submit "検索", class: 'search_btn' %>
						<% end %>
				</ul>
			</div>
		</div>
		<div class="col-md-10">
			<div class="row">
				<% @items.each do | item | %>
					<div class="col-md-4">
						<div class="item_img_box">
							<%= attachment_image_tag item, :item_image, :fill, 100, 100, format: 'jpeg' %>
						</div>
						<div class="item_name_box">
							<%= item.item_name %>
						</div>
						<div class="item_price_box">
							<%= item.price %>
						</div>
						<div class="item_artist_box">
							<%= item.artist_name%>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="item_paginate">
		<%= paginate @items %>
	</div>
</div>
