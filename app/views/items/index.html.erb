<h1 class="item_title">商品一覧</h1>

			___

<% if user_signed_in? %>
	<h3>こんにちは、
		<%= current_user.first_name %>
		<%= current_user.last_name %>さん
		email:<%= current_user.email %>
	</h3>
<% end %>
			
			___

<div class="container">
	<div class="row">
		<div class="col-md-2">
			<div>
				<h2>CATEGORY</h2>
					<ul>
					<li><a href="#">ロック</a></li>
					<li><a href="#">ポップ</a></li>
					<li><a href="#">洋楽</a></li>
					<li><a href="#">演歌</a></li>
				</ul>
			</div>
		</div>
		<div class="col-md-10">
			<div class="row">
				<% @items.each do | item | %>
					<div class="col-md-4">
						<div class="item_img_box">
							<%= attachment_image_tag item, :item_image, :fill, 100, 100, format: 'jpeg' %>
						</div>
						<div class="item_name_box">
							<%= item.item_name %>
						</div>
						<div class="item_price_box">
							<%= item.price %>
						</div>
						<div class="item_artist_box">
							<%= item.artist_name%>
						</div>
					</div>
				<% end %>
			</div>
			<div class="item_paginate">
				<%= paginate @items %>
			</div>
		</div>
	</div>
</div>
