<div class="container">

  <h2 class="text-center">パスワードを忘れてしまった場合</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

	<div class="form_email_box_pw">
		<%= f.label :email %><br />
		<%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@email.com", class: 'form-control' %>
	</div>

	<div class="text-center">
		<%= f.submit "パスワード再発行",class: "btn btn-defalt btn-lg form_btn_box" %>
	</div>

<% end %>

</div>